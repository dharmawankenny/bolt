{
  "compilerOptions": {
    "outDir": "js",
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "lib": ["es2015", "scripthost"],
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "types": ["react", "react-native"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./src/**/*.story.*"]
}
